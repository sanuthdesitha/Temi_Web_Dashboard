# Temi Robot Control WebApp - Environment Configuration Example
# Copy this file to .env and customize for your environment

# FLASK CONFIGURATION
FLASK_ENV=development
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_PORT=5000

# MQTT BROKER CONFIGURATION
# Options:
#   - Local broker: localhost or 127.0.0.1
#   - Remote broker: IP address or hostname
#   - HiveMQ Cloud: mqtt-<instance>.hivemq.cloud
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_PROTOCOL=MQTTv311

# DATABASE CONFIGURATION
DATABASE_PATH=database.db
DATABASE_BACKUP_DIR=./backups

# ROBOT CONFIGURATION
# Default home base location (waypoint name)
HOME_BASE_LOCATION=home base

# YOLO DETECTION CONFIGURATION
YOLO_DETECTION_TIMEOUT=30
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_MAX_DETECTIONS=100

# VIOLATION SETTINGS
VIOLATION_SEVERITY_HIGH_THRESHOLD=5
VIOLATION_SEVERITY_MEDIUM_THRESHOLD=2
VIOLATION_DEBOUNCE_ENABLED=true

# PATROL SETTINGS
PATROL_STOP_TIMEOUT_SECONDS=15
PATROL_ALWAYS_SEND_HOME=false
PATROL_DEFAULT_DWELL_TIME=10
PATROL_DEFAULT_DETECTION_TIMEOUT=30

# WEBVIEW CONFIGURATION
# File paths on Temi robot storage
WEBVIEW_BASE_PATH=/storage/emulated/0/webviews
WEBVIEW_PATROL_START=patrol_start.html
WEBVIEW_GOING_TO=going_to.html
WEBVIEW_ARRIVED_AT=arrived_at.html
WEBVIEW_INSPECTION_START=inspection_start.html
WEBVIEW_NO_VIOLATION=no_violation.html
WEBVIEW_VIOLATION_DETECTED=violation_detected.html
WEBVIEW_GOING_HOME=going_home.html
WEBVIEW_ARRIVED_HOME=arrived_home.html

# ALERT CONFIGURATION
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587

ALERT_SMS_ENABLED=false
ALERT_SMS_PROVIDER=twilio
ALERT_SMS_API_KEY=

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# FEATURE FLAGS (Advanced)
FEATURE_CLOUD_MQTT=true
FEATURE_YOLO_DETECTION=true
FEATURE_VIOLATION_DEBOUNCING=true
FEATURE_PATROL_SCHEDULING=false

# SECURITY
# Change these in production!
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=admin
SESSION_TIMEOUT_MINUTES=60

# ADVANCED SETTINGS
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# TWILIO WHATSAPP INTEGRATION
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Your Twilio WhatsApp Sandbox number (from https://www.twilio.com/console/sms/whatsapp/sandbox)
# Format: whatsapp:+1415XXXXX where XXXXX is your sandbox number
TWILIO_WHATSAPP_FROM=whatsapp:+1415XXXXX

# Recipients to receive WhatsApp alerts (comma-separated)
# Format: +1234567890, +9876543210
# Recipients must be verified in Twilio WhatsApp Sandbox
TWILIO_ALERT_RECIPIENTS=+1234567890, +9876543210

# For production deployment
# FLASK_ENV=production
# FLASK_DEBUG=0
# Uncomment and configure for remote access:
# FLASK_HOST=0.0.0.0
